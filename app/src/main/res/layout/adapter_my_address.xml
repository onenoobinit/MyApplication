<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:background="@color/white"
			  android:id="@+id/ll_myaddress_item"
			  android:orientation="horizontal"
			  android:layout_height="90dp">

	<RelativeLayout android:layout_width="40dp"
					android:id="@+id/rl_address_left"
					android:background="@drawable/bg_address_normal"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="15dp"
					android:layout_height="40dp">

		<ImageView android:layout_width="wrap_content"
				   android:layout_centerInParent="true"
				   android:src="@mipmap/ic_address_normal"
				   android:id="@+id/iv_address"
				   android:layout_height="wrap_content"/>

		<TextView android:layout_width="wrap_content"
				  android:layout_centerInParent="true"
				  android:text="小白"
				  android:id="@+id/tv_address_nick"
				  android:textColor="@color/white"
				  android:textSize="16sp"
				  android:visibility="gone"
				  android:layout_height="wrap_content"/>
	</RelativeLayout>

	<LinearLayout android:layout_width="0dp"
				  android:layout_weight="1"
				  android:orientation="vertical"
				  android:layout_marginLeft="10dp"
				  android:layout_gravity="center_vertical"
				  android:layout_height="wrap_content">

		<LinearLayout android:layout_width="wrap_content"
					  android:orientation="horizontal"
					  android:layout_height="wrap_content">

			<TextView android:layout_width="wrap_content"
					  android:text="小白"
					  android:textSize="16sp"
					  android:textColor="@color/c_4A4A4A"
					  android:id="@+id/tv_address_name"
					  android:layout_height="wrap_content"/>

			<TextView android:layout_width="wrap_content"
					  android:text="15665290937"
					  android:id="@+id/tv_address_phone"
					  android:textColor="@color/c_999999"
					  android:textSize="13sp"
					  android:layout_marginLeft="10dp"
					  android:layout_height="wrap_content"/>
		</LinearLayout>

		<LinearLayout android:layout_width="match_parent"
					  android:orientation="horizontal"
					  android:layout_marginTop="3dp"
					  android:layout_height="wrap_content">

			<TextView android:layout_width="wrap_content"
					  android:id="@+id/tv_address_normal"
					  android:textColor="@color/tb_bg"
					  android:textSize="15sp"
					  android:text="默认"
					  android:layout_height="wrap_content"/>

			<TextView android:layout_width="wrap_content"
					  android:id="@+id/tv_address_type"
					  android:text="家"
					  android:textSize="14sp"
					  android:layout_marginLeft="15dp"
					  android:textColor="@color/c_999999"
					  android:layout_height="wrap_content"/>

			<TextView android:layout_width="wrap_content"
					  android:layout_marginRight="15dp"
					  android:layout_marginLeft="12dp"
					  android:id="@+id/tv_address"
					  android:text="上海 上海市 闵行区 浦锦街道"
					  android:textColor="@color/c_4A4A4A"
					  android:maxLines="1"
					  android:ellipsize="end"
					  android:textSize="13sp"
					  android:layout_height="wrap_content"/>
		</LinearLayout>

		<TextView android:layout_width="wrap_content"
				  android:id="@+id/tv_address_detail"
				  android:layout_marginTop="2dp"
				  android:textColor="@color/c_4A4A4A"
				  android:text="江月路地铁站附近1000米左右"
				  android:textSize="13sp"
				  android:layout_height="wrap_content"/>
	</LinearLayout>


	<View android:layout_width="1dp"
		  android:background="@color/c_F3F2F2"
		  android:layout_gravity="center_vertical"
		  android:layout_height="40dp"></View>

	<TextView android:layout_width="50dp"
			  android:text="编辑"
			  android:id="@+id/tv_address_edit"
			  android:textColor="@color/c_AAAAAA"
			  android:textSize="14sp"
			  android:gravity="center"
			  android:layout_height="match_parent"/>
</LinearLayout>