<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="200dp"
				android:layout_height="100dp">


	<RelativeLayout android:layout_width="match_parent"
					android:layout_margin="10dp"
					android:id="@+id/rl_vip_item"
					android:background="@drawable/bg_me_vip"
					android:layout_height="match_parent">
		<ImageView android:layout_width="50dp"
				   android:id="@+id/iv_me_vip"
				   android:src="@mipmap/ic_me_vip"
				   android:layout_marginLeft="10dp"
				   android:layout_centerVertical="true"
				   android:layout_height="50dp"/>

		<LinearLayout android:layout_width="wrap_content"
					  android:layout_toRightOf="@+id/iv_me_vip"
					  android:layout_centerVertical="true"
					  android:layout_marginLeft="10dp"
					  android:orientation="vertical"
					  android:layout_height="wrap_content">

			<TextView android:layout_width="wrap_content"
					  android:id="@+id/tv_me_vip_type"
					  android:text="我的vip会员"
					  android:textColor="@color/c_00c04f"
					  android:textSize="16sp"
					  android:layout_height="wrap_content"/>

			<TextView android:layout_width="wrap_content"
					  android:id="@+id/tv_me_vip_content"
					  android:text="1张代金券即将过期"
					  android:layout_marginTop="5dp"
					  android:layout_marginRight="10dp"
					  android:maxLines="1"
					  android:textSize="14sp"
					  android:ellipsize="end"
					  android:layout_height="wrap_content"/>
		</LinearLayout>
	</RelativeLayout>

</RelativeLayout>