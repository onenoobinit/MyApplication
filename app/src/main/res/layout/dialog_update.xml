<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

	<LinearLayout android:layout_width="match_parent"
				  android:layout_centerInParent="true"
				  android:orientation="vertical"
				  android:background="@drawable/bg_ll"
				  android:layout_height="wrap_content">

		<de.hdodenhof.circleimageview.CircleImageView android:layout_width="70dp"
													  android:src="@drawable/ic_app"
													  android:scaleType="centerCrop"
													  android:layout_gravity="center_horizontal"
													  android:layout_marginTop="15dp"
													  android:layout_height="70dp"/>

		<TextView android:layout_width="wrap_content"
				  android:layout_gravity="center_horizontal"
				  android:layout_marginTop="10dp"
				  android:text="版本更新"
				  android:textColor="@color/c_4A4A4A"
				  android:textSize="18sp"
				  android:layout_height="wrap_content"/>

		<TextView android:layout_width="wrap_content"
				  android:layout_gravity="center_horizontal"
				  android:layout_marginTop="8dp"
				  android:text="something最新版来啦，马上更新尝鲜吧！"
				  android:textSize="14sp"
				  android:textColor="@color/c_4A4A4A"
				  android:layout_height="wrap_content"/>

		<View android:layout_width="match_parent"
			  android:background="@color/c_F3F2F2"
			  android:layout_marginTop="15dp"
			  android:layout_height="1dp"></View>
		<LinearLayout android:layout_width="match_parent"
					  android:orientation="horizontal"
					  android:layout_height="50dp">

			<TextView android:layout_width="0dp"
					  android:layout_weight="1"
					  android:id="@+id/tv_cancel"
					  android:text="稍后再说"
					  android:gravity="center"
					  android:textColor="@color/tb_bg"
					  android:textSize="18sp"
					  android:layout_height="match_parent"/>

			<View android:layout_width="1dp"
				  android:background="@color/c_F3F2F2"
				  android:layout_height="match_parent"></View>

			<TextView android:layout_width="0dp"
					  android:layout_weight="1"
					  android:id="@+id/tv_update"
					  android:text="立即更新"
					  android:gravity="center"
					  android:textColor="@color/tb_bg"
					  android:textSize="18sp"
					  android:layout_height="match_parent"/>
		</LinearLayout>
	</LinearLayout>

</RelativeLayout>