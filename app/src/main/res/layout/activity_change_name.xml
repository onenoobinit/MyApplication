<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:background="@color/c_F3F2F2"
		android:layout_height="match_parent"
		android:focusableInTouchMode="true"
		tools:context=".view.activity.ChangeNameActivity">

	<include android:id="@+id/tb_change_name"
			 layout="@layout/activity_head"/>

	<EditText android:layout_width="match_parent"
			  android:id="@+id/et_change_name"
			  android:layout_below="@+id/tb_change_name"
			  android:background="@color/white"
			  android:hint="请输入您的昵称"
			  android:textColor="@color/c_4A4A4A"
			  android:textColorHint="@color/c_999999"
			  android:textSize="14sp"
			  android:paddingLeft="15dp"
			  android:layout_height="50dp"/>

	<TextView android:layout_width="wrap_content"
			  android:layout_below="@+id/et_change_name"
			  android:layout_marginTop="15dp"
			  android:layout_marginLeft="15dp"
			  android:text="长度为2-10个字，支持中英文和字母任意组合"
			  android:textSize="13sp"
			  android:textColor="@color/c_999999"
			  android:layout_height="wrap_content"/>

</RelativeLayout>