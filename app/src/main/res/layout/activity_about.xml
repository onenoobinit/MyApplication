<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/white"
		android:orientation="vertical"
		tools:context=".view.activity.AboutActivity">

	<include
			android:id="@+id/tb_about"
			layout="@layout/activity_head"></include>

	<ImageView android:layout_width="70dp"
			   android:src="@drawable/ic_app"
			   android:scaleType="centerCrop"
			   android:layout_gravity="center_horizontal"
			   android:layout_marginTop="50dp"
			   android:layout_height="70dp"/>

	<TextView android:layout_width="wrap_content"
			  android:id="@+id/tv_versionname"
			  android:text="v 1.0.0"
			  android:layout_gravity="center_horizontal"
			  android:layout_marginTop="10dp"
			  android:textSize="14sp"
			  android:textColor="@color/c_4A4A4A"
			  android:layout_height="wrap_content"/>

	<RelativeLayout android:layout_width="match_parent"
					android:layout_marginTop="20dp"
					android:id="@+id/rl_ahout_update"
					android:orientation="horizontal"
					android:layout_marginLeft="15dp"
					android:layout_marginRight="15dp"
					android:background="@drawable/ll_click"
					android:layout_height="50dp">

		<TextView android:layout_width="wrap_content"
				  android:text="检测更新"
				  android:id="@+id/tv_update"
				  android:textSize="14sp"
				  android:layout_centerVertical="true"
				  android:textColor="@color/c_4A4A4A"
				  android:layout_height="wrap_content"/>

		<TextView android:layout_width="wrap_content"
				  android:background="@drawable/bg_red"
				  android:layout_marginLeft="5dp"
				  android:layout_centerVertical="true"
				  android:text="new"
				  android:layout_toRightOf="@+id/tv_update"
				  android:paddingLeft="5dp"
				  android:paddingRight="5dp"
				  android:gravity="center"
				  android:textColor="@color/white"
				  android:layout_height="wrap_content"/>

		<ImageView android:layout_width="wrap_content"
				   android:src="@mipmap/ic_me_arrow_big"
				   android:layout_alignParentRight="true"
				   android:layout_centerVertical="true"
				   android:layout_height="wrap_content"/>
	</RelativeLayout>

	<View android:layout_width="match_parent"
		  android:background="@color/c_F3F2F2"
		  android:layout_marginLeft="15dp"
		  android:layout_marginRight="15dp"
		  android:layout_height="1dp"></View>

	<RelativeLayout android:layout_width="match_parent"
					android:id="@+id/rl_ahout_feedback"
					android:layout_marginTop="20dp"
					android:orientation="horizontal"
					android:layout_marginLeft="15dp"
					android:layout_marginRight="15dp"
					android:background="@drawable/ll_click"
					android:layout_height="50dp">

		<TextView android:layout_width="wrap_content"
				  android:text="投诉"
				  android:textSize="14sp"
				  android:layout_centerVertical="true"
				  android:textColor="@color/c_4A4A4A"
				  android:layout_height="wrap_content"/>


		<ImageView android:layout_width="wrap_content"
				   android:src="@mipmap/ic_me_arrow_big"
				   android:layout_alignParentRight="true"
				   android:layout_centerVertical="true"
				   android:layout_height="wrap_content"/>
	</RelativeLayout>

	<View android:layout_width="match_parent"
		  android:background="@color/c_F3F2F2"
		  android:layout_marginLeft="15dp"
		  android:layout_marginRight="15dp"
		  android:layout_height="1dp"></View>

	<RelativeLayout android:layout_width="match_parent"
					android:layout_marginTop="20dp"
					android:id="@+id/rl_about_help"
					android:orientation="horizontal"
					android:layout_marginLeft="15dp"
					android:layout_marginRight="15dp"
					android:background="@drawable/ll_click"
					android:layout_height="50dp">

		<TextView android:layout_width="wrap_content"
				  android:text="帮助"
				  android:textSize="14sp"
				  android:layout_centerVertical="true"
				  android:textColor="@color/c_4A4A4A"
				  android:layout_height="wrap_content"/>


		<ImageView android:layout_width="wrap_content"
				   android:src="@mipmap/ic_me_arrow_big"
				   android:layout_alignParentRight="true"
				   android:layout_centerVertical="true"
				   android:layout_height="wrap_content"/>
	</RelativeLayout>
</LinearLayout>