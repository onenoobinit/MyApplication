<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/c_F3F2F2"
		tools:context="com.ityzp.something.view.activity.RegisterChoseActivity">

	<TextView
			android:id="@+id/tv_line1"
			android:layout_width="230dp"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="68dp"
			android:gravity="center"
			android:text="请正确选择出生日期和性别,"
			android:textColor="@color/c_4A4A4A"
			android:textSize="14sp"/>

	<LinearLayout
			android:id="@+id/ll_boy"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/tv_line1"
			android:layout_marginLeft="74dp"
			android:layout_marginTop="50dp"
			android:orientation="vertical">

		<ImageView
				android:id="@+id/iv_boy"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@mipmap/ic_boy"/>

		<TextView
				android:id="@+id/tv_boy"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="15dp"
				android:text="男生"
				android:textColor="@color/c_AAAAAA"
				android:textSize="16sp"/>
	</LinearLayout>

	<LinearLayout
			android:id="@+id/ll_girl"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/tv_line1"
			android:layout_alignParentRight="true"
			android:layout_marginTop="50dp"
			android:layout_marginRight="74dp"
			android:orientation="vertical">

		<ImageView
				android:id="@+id/iv_girl"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@mipmap/ic_girl"/>

		<TextView
				android:id="@+id/tv_girl"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="15dp"
				android:text="女生"
				android:textColor="@color/c_AAAAAA"
				android:textSize="16sp"/>
	</LinearLayout>

	<com.ityzp.something.widgets.PickTimeView android:layout_width="match_parent"
											  android:layout_above="@+id/tv_register"
											  android:id="@+id/pt_date"
											  android:background="@color/white"
											  android:layout_height="197dp">
	</com.ityzp.something.widgets.PickTimeView>

	<TextView
			android:id="@+id/tv_register"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_alignParentBottom="true"
			android:background="@color/tb_bg"
			android:gravity="center"
			android:text="注册"
			android:textColor="@color/white"
			android:textSize="16sp"
			android:textStyle="bold"/>
</RelativeLayout>
