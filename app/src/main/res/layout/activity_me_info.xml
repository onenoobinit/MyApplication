<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/white"
		tools:context="com.ityzp.something.view.fragment.MeInfoActivity">

	<include
			android:id="@+id/tb_meinfo"
			layout="@layout/activity_head"/>

	<ScrollView android:layout_width="match_parent"
				android:overScrollMode="never"
				android:scrollbars="none"
				android:id="@+id/sv_meinfo"
				android:layout_below="@+id/tb_meinfo"
				android:layout_height="match_parent">

		<LinearLayout android:layout_width="match_parent"
					  android:orientation="vertical"
					  android:layout_height="match_parent">

			<RelativeLayout
					android:id="@+id/rl_meinfo_pic"
					android:layout_width="match_parent"
					android:layout_height="70dp"
					android:background="@drawable/ll_click"
					android:clickable="true">

				<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:layout_marginRight="15dp"
						android:orientation="horizontal">

					<ImageView
							android:id="@+id/iv_pic"
							android:layout_width="50dp"
							android:layout_height="50dp"
							android:layout_gravity="center_vertical"
							android:src="@drawable/ic_app"/>

					<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_vertical"
							android:layout_marginLeft="10dp"
							android:src="@mipmap/ic_me_arrow_big"/>
				</LinearLayout>

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginLeft="15dp"
						android:text="头像"
						android:textColor="@color/c_4A4A4A"
						android:textSize="14sp"/>
			</RelativeLayout>

			<View android:layout_width="match_parent"
				  android:background="@color/c_F3F2F2"
				  android:layout_height="1dp"></View>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
