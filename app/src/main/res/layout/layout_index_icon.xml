		</LinearLayout>

		<LinearLayout android:layout_width="0dp"
					  android:id="@+id/ll_index_video"
					  android:orientation="vertical"
					  android:layout_weight="1"
					  android:layout_height="wrap_content">

			<ImageView android:layout_width="40dp"
